    <script>

        $(function () {
            canvas = document.getElementById("minute");
            canvas.width = $("div.container-canvas").width();
            canvas.height = $("div.container-canvas").height();
            ctx = canvas.getContext("2d");
            ctx.translate(0, canvas.height);
            ctx.scale(1, -1);
            ctx.fillStyle = '#fefefe';
            ctx.fillRect(0, 0, canvas.width, canvas.height);


            $("#stock").focus();
            $("#stock").change(function () {
                draw(this.value, $("#count").val());
            });
            draw($("#stock").val(), $("#count").val());
        });

    </script>


    <script language="JavaScript">
        $(function () {

            divtop = $("#divtop");
            divleft = $("#divleft");
            function move() {
                divtop.show();
                divleft.show();
                if (event.clientX < document.body.clientWidth - 2)
                    divtop.css("left", document.body.scrollLeft + event.clientX + 1);
                else divtop.css("left", document.body.clientWidth - 2);
                if (event.clientY < document.body.clientHeight - 2)
                    divleft.css("top", document.body.scrollTop + event.clientY + 1);
            }

            divleft.height("2px");
            divleft.width(document.body.clientWidth);

            divtop.width("2px");
            divtop.height(document.body.clientHeight);

            //$("canvas").mouseover(move);
            $("canvas").mouseleave(function () {
                divtop.hide();
                divleft.hide();

            });
        });

    </script>
